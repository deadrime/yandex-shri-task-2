.main_card
  background #eae7e2
  border-radius 20px
  padding 20px 0 0 20px
  flex-direction column
  box-sizing border-box
  width 100%
  height 282px
  display flex
  justify-content space-between
  background-size: cover
  background-position: center
  &__info
    padding-left 5px
    padding-top 5px
    display flex
    flex-direction column
    &__title
      font-size 18px
      margin 0
    &__status
      font-size 12px
      padding-top 6px
      padding-bottom 15px
    &__content
      display flex
      &__item
        padding-right 18px
        &__icon
          margin-top 5px
          height 20px
        &__value
          display: flex;
          height: 28px;
          align-items: center;
        &__title
          font-size: 12px
          color: #858585
        &__temperature
          padding-top 4px
          font-size 24px
          font-weight bold
          padding-right 5px
  &__devices
    position relative
    min-width: 200px;
    margin: 20px 0;
    &__wrapper
      overflow: hidden;
      position: relative;
      width: 100%;
      display: flex;
      .card
        margin-right 20px

  .scroll_btn
    display none
    background url('./assets/scroll.svg') no-repeat center
    background-size 100%
    width 16px
    height 16px
    position absolute
    bottom 12px
    right calc(50% - 8px);
    cursor pointer

@media (min-width: 1024px)
  .main_card
    flex-direction: row
    padding: 25px 0 0 25px
    height 330px
    position relative
    &__info
      &__title
        font-size 27px
      &__status
        font-size 14px
        padding-bottom 25px
      &__content
        &__item
          &__icon
            margin-top 0
            height 26px
          &__title
            font-size: 14px
          &__value
            height: auto
          &__temperature
            font-size: 36px
    &__devices
      width 30%
      display: block
      min-width 200px
      margin 0 20px 0 0
      &__wrapper
        display block
        height 100%
    .card
      margin-bottom 15px
      margin-right 0
    .scroll_btn
      display block